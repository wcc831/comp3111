<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/index_chatRoomLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:onClick="attemptJoin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/index_chatRoom"
            android:text="chat Room"
            android:textSize="16dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/index_activeTime"
            android:text="active Time"
            android:textSize="10dp"
            android:textColor="@color/timestamp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <TextView
        android:id="@+id/index_question"
        android:text="question"
        android:textSize="14dp"
        android:textColor="@color/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>