<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent" android:layout_height="50dp"
        android:padding="5dp"
        android:textSize="25dp" android:textColor="#F2F2F2" android:gravity="center"
        android:background="#FF6666"
        android:text="Create a poll"
        />

    <TextView
        android:text="Define Poll's Question"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />

    <EditText
        android:id="@+id/poll_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Poll's title" />

    <TextView
        android:text="Set Poll's Answers"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/poll_answer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Poll's title" />

        <Button
            android:id="@+id/add_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/poll_answer"
            android:text="Add"
            android:textSize="18dp"/>

    </RelativeLayout>




</LinearLayout>