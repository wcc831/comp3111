<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/auth_container"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.hunkim.questionroom.AuthenticationActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/auth_authInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">


        <ImageView
            android:id="@+id/auth_image"
            android:src="@drawable/good"
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <TextView
            android:text="he's good!"
            android:id="@+id/auth_word"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/auth_loading_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/auth_loading"
            android:indeterminate="true"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="authenticaing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




</FrameLayout>
